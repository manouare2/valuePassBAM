<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@drawable/wall">

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/agencies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/DefaultTextLabels"
                android:textSize="18sp"
                android:textStyle="bold" />



        </RelativeLayout>



    </LinearLayout>


    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Colis en Trop"
        android:textOn="Colis en Trop"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffdd00" />

    <ListView
        android:id="@+id/en_cours_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:visibility="gone">
    </ListView>




    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="ToggleButton"
        android:textOff="Colis en moins"
        android:textOn="Colis en moins"
        android:layout_margin="5dp"
        android:background="#ffdd00"
        android:textColor="@color/colorPrimaryDark" />

    <ListView
        android:id="@+id/liv_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:visibility="gone">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/ok"
            android:layout_width="69dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="90dp"
            android:layout_weight="0.09"
            android:background="#ffdd00"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>